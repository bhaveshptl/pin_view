            <item
                android:width="72dp"
                android:height="43dp">
                <bitmap
                    android:gravity="start|fill"
                    android:src="@mipmap/cashfree"></bitmap>
            </item>
            <item
                android:width="72dp"
                android:height="43dp"
                android:left="76dp">
                <bitmap
                    android:gravity="center|fill"
                    android:src="@mipmap/amex"></bitmap>
            </item>
            <item
                android:width="72dp"
                android:height="43dp"
                android:left="152dp">
                <bitmap
                    android:gravity="end|fill"
